---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero';
import Introduction from '../components/home/Introduction';
import Services from '../components/home/Services';
import Testimonials from '../components/home/Testimonials';
import Newsletter from '../components/shared/Newsletter';

const seo = {
  title: 'CoachingPro - Transform Your Life & Business',
  description: 'Expert coaching in digital marketing and lifestyle optimization. Start your journey to excellence today.',
};
---

<Layout title={seo.title} description={seo.description}>
  <Hero client:load />
  <Introduction client:visible />
  <Services client:visible />
  <Testimonials client:visible />
  <Newsletter client:visible />
</Layout>