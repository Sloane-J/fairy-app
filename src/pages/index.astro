---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero';
import Services from '../components/home/Services';
import Testimonials from '../components/home/Testimonials';
import Newsletter from '../components/shared/Newsletter';

const seo = {
  title: 'Affeliate Nexus - Transform Your Life & Business',
  description: 'Expert coaching in affeliate marketing and lifestyle optimization. Start your journey to excellence today.',
};
---

<Layout title={seo.title} description={seo.description}>
  <main>
    <Hero client:load />
    <Services client:visible />
    <div class="bg-background-alt">
      <Testimonials client:visible />
    </div>
    <Newsletter client:visible />
  </main>
</Layout>