// src/pages/index.astro
---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import HowItWorks from '../components/home/HowItWorks.astro';
import Features from '../components/home/Features.astro';
import BlogList from '../components/home/BlogList.astro';
import CTA from '../components/shared/CTA.astro';
---

<Layout title="Home | Your Brand">
  <Hero />
  <HowItWorks />
  <Features />
  <CTA />
  <BlogList />
</Layout>

// src/components/home/Hero.astro
---
import CTAButton from '../global/CTAButton.astro';
---

<section class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block">Transform Your Life &</span>
            <span class="block text-indigo-600">Digital Marketing Skills</span>
          </h1>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            Expert coaching in lifestyle transformation and digital marketing. Learn at your own pace through personalized WhatsApp sessions.
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <CTAButton href="/contact" primary>
              Book Free Consultation
            </CTAButton>
            <CTAButton href="/services" secondary>
              View Services
            </CTAButton>
          </div>
        </div>
      </main>
    </div>
  </div>
</section>

