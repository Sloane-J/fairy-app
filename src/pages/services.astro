---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/services/ServiceCard';
import { CheckCircle, ArrowRight } from 'lucide-react';

const services = [
  {
    title: 'Affiliate Marketing Mastery',
    description: 'Learn proven strategies to generate passive income through affiliate marketing.',
    features: [
      'Niche Selection Strategies',
      'High-Converting Landing Pages',
      'Email Marketing Automation',
      'Traffic Generation Techniques',
      'Commission Optimization',
    ],
    price: 'GH₵ 230',
    
    image: '/placeholder.svg?height=400&width=600',
    href: '/services/affiliate-marketing'
  },
  {
    title: 'Graphic Design Mastery',
    description: 'Master professional design skills for digital and print media.',
    features: [
      'Adobe Creative Suite Training',
      'Brand Identity Design',
      'Social Media Graphics',
      'Print Design Fundamentals',
      'Portfolio Development',
    ],
    price: 'GH₵ 150',
    
    image: '/placeholder.svg?height=400&width=600',
    href: '/services/graphic-design'
  },
  {
    title: 'Mini Importation Business',
    description: 'Start your profitable import business with expert guidance.',
    features: [
      'Supplier Sourcing',
      'Product Selection',
      'Quality Control',
      'Shipping & Logistics',
      'Customs Clearance',
    ],
    price: 'GH₵ 150',
    
    image: '/placeholder.svg?height=400&width=600',
    href: '/services/mini-importation'
  },
  {
    title: 'WhatsApp Digital Marketing',
    description: 'Transform WhatsApp into a powerful marketing and sales channel.',
    features: [
      'Business Account Setup',
      'Content Strategy',
      'Broadcast Campaigns',
      'Lead Generation',
      'Analytics & Tracking',
    ],
    price: 'GH₵ 150',
    
    image: '/placeholder.svg?height=400&width=600',
    href: '/services/whatsapp-marketing'
  }
];

const seo = {
  title: 'Services - Digital Business Academy',
  description: 'Expert training in affiliate marketing, graphic design, mini importation, and WhatsApp marketing.',
};

---

<Layout title={seo.title} description={seo.description}>
  <div class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-text mb-6">
          Master Digital Business Skills
        </h1>
        <p class="text-lg text-text-light">
          Transform your entrepreneurial journey with our comprehensive training programs.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8 mb-16">
        {services.map((service) => (
          <ServiceCard {...service} client:visible />
        ))}
      </div>

      <div class="bg-background-alt rounded-2xl p-8 md:p-12">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="text-3xl font-display font-bold text-text mb-4">
            Why Choose Our Training?
          </h2>
          <p class="text-text-light">
            Get practical skills and support to build successful digital businesses.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            'Practical Assignments',
            'One-on-One Mentoring',
            'Live Workshop Sessions',
            'Case Studies',
            'Business Templates',
            'Lifetime Community Access'
          ].map((feature) => (
            <div class="flex items-start gap-4">
              <CheckCircle className="h-6 w-6 text-primary flex-shrink-0" />
              <span class="text-text-light">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <div class="text-center mt-16">
        <a
          href="/contact"
          class="inline-flex items-center px-6 py-3 text-lg font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-colors duration-200"
        >
          Start Your Journey Today
          <ArrowRight className="ml-2 h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</Layout>