---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/shared/ContactForm';
import { Mail, Phone, MapPin, MessageSquare } from 'lucide-react';

const contactInfo = [
  {
    icon: Mail,
    title: 'Email',
    details: 'bigcaleb73@gmail.com',
    link: 'mailto:bigcaleb73@gmail.com'
  },
  {
    icon: Phone,
    title: 'Phone',
    details: '+233 596 433 735',
    link: 'tel:+233 596 433 735'
  },
  {
    icon: MapPin,
    title: 'Location',
    details: 'Koforidua, Ghana',
    link: 'https://www.google.com/maps/place/Okorase,+Koforidua/@6.0679692,-0.2687834,14z/data=!4m6!3m5!1s0xfdf6af56f34196f:0x2e13b787b9e3a88e!8m2!3d6.0455867!4d-0.2628164!16s%2Fg%2F11bx225pzk?entry=ttu&g_ep=EgoyMDI1MDEyOS4xIKXMDSoASAFQAw%3D%3D'
  },
  {
    icon: MessageSquare,
    title: 'WhatsApp',
    details: 'Chat with us on WhatsApp',
    link: 'https://wa.link/s94ypr', // Removed ${} and formatted number correctly
    className: 'hover:text-[#25D366] transition-colors',
    ariaLabel: 'Contact us on WhatsApp'
}
];

const seo = {
  title: 'Contact Us - Affiliate Nexus',
  description: 'Get in touch with us for personalized coaching and digital marketing guidance.',
};
---

<Layout title={seo.title} description={seo.description}>
  <div class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-text mb-6">
          Let's Start Your Journey
        </h1>
        <p class="text-lg text-text-light">
          Have questions about our coaching programs? We're here to help you take the next step.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {contactInfo.map(({ icon: Icon, title, details, link }) => (
          <a
            href={link}
            class="flex flex-col items-center p-6 bg-background rounded-lg shadow-sm border border-secondary/20 hover:border-primary/40 transition-colors duration-200"
          >
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-4">
              <Icon class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-lg font-semibold text-text mb-2">{title}</h3>
            <p class="text-text-light text-center">{details}</p>
          </a>
        ))}
      </div>

      <ContactForm client:load />
    </div>
  </div>
</Layout>